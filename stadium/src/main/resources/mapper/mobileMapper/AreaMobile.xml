<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.situ.stadium.mobile.dao.AreaMobileDao">

    <resultMap id="areaMap" type="com.situ.stadium.mobile.model.search.AreaMobileSearchBean">
        <id column="id" property="id"/>
        <result column="area_name" property="areaName"/>
        <result column="sp_id" property="spId"/>
        <result column="status" property="status"/>
        <result column="description" property="description"/>

    </resultMap>

    <sql id="area">
        select id,
               area_name,
               sp_id,
               status,
               description
        from sports_area
    </sql>

    <resultMap id="usableArea" type="com.situ.stadium.mobile.model.dto.UsableArea">
        <id column="area_id" property="areaId"/>
        <result column="area_name" property="areaName"/>
        <result column="sp_name" property="spName"/>
    </resultMap>


    <select id="getUsableArea" resultMap="usableArea">
        select t1.id as area_id, t1.area_name as area_name, t2.sp_name as sp_name
        from sports_area t1
                 left join sports t2 on t1.sp_id = t2.id
                 left join advance_order t3 on t1.id = t3.spa_id
        where t2.id = #{spId} and t1.status = '0'
          and ((start_time is null or end_time is null)
            or (start_time &gt;= #{timeTo} or end_time &lt;= #{timeFrom})
            or t3.status != '0')
    </select>


    <select id="getList" resultMap="areaMap">
        <include refid="area" />
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="spId != null">
                and sp_id = #{spId}
            </if>
            <if test="areaName != null and areaName != ''">
                <bind value="'%' + areaName + '%'" name="an"/>
                and area_name like #{an}
            </if>
            <if test="status != null and status != ''">
                and `status` = #{status}
            </if>
        </where>
    </select>

    <select id="findBySpId" resultMap="areaMap">
        <include refid="area"/>
        where sp_id = #{spId}
    </select>

    <select id="findById" resultMap="areaMap">
        <include refid="area" />
        where id = #{id}
    </select>

    <insert id="insert">
        insert into sports_area (area_name, sp_id, status, description)
        values (#{areaName},
                #{spId},
                #{status},
                #{description})
    </insert>

    <select id="findAll" resultMap="areaMap">
        <include refid="area" />
    </select>

    <update id="update">
        update sports_area
        set area_name      = #{areaName},
            sp_id       = #{spId},
            status       = #{status},
            description = #{description}
        where id = #{id}
    </update>

    <delete id="deleteByIds">
        delete from sports_area
        where id in
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>

</mapper>